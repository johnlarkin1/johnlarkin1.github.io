{
  "name": "sleek",
  "version": "1.0.0",
  "description": "Sleek is a modern Jekyll theme focused on speed performance & SEO best practices.",
  "main": "gulpfile.js",
  "type": "module",
  "dependencies": {
    "autoprefixer": "*",
    "crypto-js": "^4.1.1",
    "dist": "*",
    "fg-loadcss": "*",
    "jquery": "*",
    "lazysizes": "*",
    "normalize.css": "*",
    "picturefill": "*",
    "prompt-sync": "^4.2.0",
    "sass": "^1.49.9",
    "sha1": "^1.1.1",
    "sharp": "^0.33.2",
    "staticrypt": "^2.3.5",
    "uglifyify": "^5.0.2",
    "velocity-animate": "*"
  },
  "devDependencies": {
    "babel-core": "*",
    "babel-preset-es2015": "*",
    "babelify": "*",
    "browser-sync": "^3.0.2",
    "browserify": "^17.0.0",
    "critical": "*",
    "eslint": "*",
    "eslint-config-jquery": "*",
    "eslint-plugin-dollar-sign": "*",
    "eslint-plugin-jquery": "*",
    "sw-precache": "*",
    "vinyl-buffer": "*",
    "vinyl-source-stream": "*"
  },
  "scripts": {
    "clean": "del-cli _site",
    "sass": "node-sass _sass/jekyll-sleek.scss | postcss --use autoprefixer -o _site/assets/css/main.css",
    "js": "browserify _js/scripts.js -t [ babelify --presets [ @babel/preset-env ] ] | uglifyjs > _site/assets/js/bundle.js",
    "img": "imagemin '_img/posts/*.{png,jpg}' --out-dir='assets/img/posts/'",
    "jekyll-build": "jekyll build",
    "critical-css": "critical _site/index.html --base _site/ --css _site/assets/css/main.css --width 1280 --height 960 --inline > _includes/critical.css",
    "sw": "workbox generateSW workbox-config.js",
    "build": "npm-run-all clean sass js img jekyll-build critical-css sw",
    "serve": "browser-sync start --server '_site' --files '_site/**/*.*'",
    "watch": "npm-run-all --parallel watch:*",
    "watch:styles": "chokidar '_sass/**/*.scss' -c 'npm run sass'",
    "watch:js": "chokidar '_js/**/*.js' -c 'npm run js'",
    "watch:jekyll": "chokidar '(*.html|_layouts/*.html|_includes/*.html|_posts/*.md|pages_/*.md|_include/*html)' -c 'npm run jekyll-build'",
    "start": "npm-run-all build --parallel serve watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janczizikow/sleek.git"
  },
  "keywords": [],
  "author": "Jan Czizikow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/janczizikow/sleek/issues"
  },
  "homepage": "https://github.com/janczizikow/sleek#readme"
}
